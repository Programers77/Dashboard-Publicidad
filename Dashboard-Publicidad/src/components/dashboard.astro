<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css"rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous"/>

<div class="dashboard" >
  <!-- Contenido Principal -->
  <div class="main-content">
    <div class="header">
      <h2>Dashboard de Publicidad</h2>
    </div>

    <!-- Tarjetas de resumen -->
    <div class="cards-row">
      <div class="card">
        <div class="card-header">
          <div class="card-title">Gasto Total</div>
          <div class="card-icon bg-primary">
            <i class="fas fa-dollar-sign"></i>
          </div>
        </div>
        <div class="card-value">$32,456</div>
        <div class="card-label">Periodo actual</div>
        <div class="card-trend trend-up">
          <i class="fas fa-arrow-up"></i> +12.5% vs periodo anterior
        </div>
      </div>
      <div class="card">
        <div class="card-header">
          <div class="card-title">Campañas Activas</div>
          <div class="card-icon bg-success">
            <i class="fas fa-bullhorn"></i>
          </div>
        </div>
        <div class="card-value">14</div>
        <div class="card-label">En ejecución</div>
        <div class="card-trend trend-up">
          <i class="fas fa-arrow-up"></i> +3 vs periodo anterior
        </div>
      </div>
      <div class="card">
        <div class="card-header">
          <div class="card-title">Modelos Contratados</div>
          <div class="card-icon bg-warning">
            <i class="fas fa-user-tie"></i>
          </div>
        </div>
        <div class="card-value">27</div>
        <div class="card-label">En plantilla</div>
        <div class="card-trend trend-down">
          <i class="fas fa-arrow-down"></i> -2 vs periodo anterior
        </div>
      </div>
    </div>

    <!-- Gráficos principales -->
    <div class="grid-2">
      <div class="card">
        <div class="card-header">
          <div class="card-title">
            <i class="fas fa-calendar-week"></i> Gastos por Período
          </div>
          <select class="filter-select">
            <option>Todas las campañas</option>
            <option>Redes sociales</option>
            <option>Google Ads</option>
            <option>Influencers</option>
          </select>
        </div>
        <div class="chart-container">
          <div class="expenses-chart">
            <div
              class="chart-bar"
              style="height: 40%;"
              data-value="$4,250"
              data-label="Lun"
            >
            </div>
            <div
              class="chart-bar"
              style="height: 65%;"
              data-value="$6,820"
              data-label="Mar"
            >
            </div>
            <div
              class="chart-bar"
              style="height: 55%;"
              data-value="$5,640"
              data-label="Mié"
            >
            </div>
            <div
              class="chart-bar"
              style="height: 75%;"
              data-value="$7,930"
              data-label="Jue"
            >
            </div>
            <div
              class="chart-bar"
              style="height: 90%;"
              data-value="$9,420"
              data-label="Vie"
            >
            </div>
            <div
              class="chart-bar"
              style="height: 45%;"
              data-value="$4,730"
              data-label="Sáb"
            >
            </div>
            <div
              class="chart-bar"
              style="height: 25%;"
              data-value="$2,640"
              data-label="Dom"
            >
            </div>
          </div>
        </div>
      </div>
      <div class="card">
        <div class="card-header">
          <div class="card-title">
            <i class="fas fa-chart-pie"></i> Distribución de Gastos
          </div>
        </div>
        <div class="donut-chart">
          <div class="donut-hole">$32,456</div>
        </div>
        <div class="legend">
          <div class="legend-item">
            <div class="legend-color color-primary"></div>
            <span>Campañas ADS Metas (25%)</span>
          </div>
          <div class="legend-item">
            <div class="legend-color color-success"></div>
            <span>Campañas Google Ads (20%)</span>
          </div>
          <div class="legend-item">
            <div class="legend-color color-warning"></div>
            <span>Influencers (15%)</span>
          </div>
          <div class="legend-item">
            <div class="legend-color color-info"></div>
            <span>Promotoras/Modelos (12%)</span>
          </div>
          <div class="legend-item">
            <div class="legend-color color-danger"></div>
            <span>Vallas Publicitarias (10%)</span>
          </div>
          <div class="legend-item">
            <div class="legend-color color-secondary"></div>
            <span>Banderolas (8%)</span>
          </div>
          <div class="legend-item">
            <div class="legend-color color-gray"></div>
            <span>Otros Gastos (10%)</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Lista de Modelos -->

    <div class="card payment-management-card">
      <div class="card-header">
        <div class="card-title-container">
          <i class="fas fa-money-check-alt card-header-icon"></i>
          <h3 class="card-title">Gestión de Pagos a Modelos</h3>
        </div>
        <div class="card-header-actions">
          <button class="btn-primary-outline">
            <i class="fas fa-file-invoice-dollar"></i> Generar Informe
          </button>
        </div>
      </div>

      <!--total pagado-->
      <div class="payment-summary-grid">
        <div class="payment-summary-card">
          <div class="summary-icon bg-primary">
            <i class="fas fa-wallet"></i>
          </div>
          <div class="summary-content">
            <h4>Total Pagado</h4>
            <p class="summary-amount">$45,230</p>
            <div class="summary-trend trend-up">
              <i class="fas fa-arrow-up"></i> 12.5% este mes
            </div>
          </div>
        </div>
        <div class="payment-summary-card">
          <div class="summary-icon bg-success">
            <i class="fas fa-user-check"></i>
          </div>
          <div class="summary-content">
            <h4>Pagos Completados</h4>
            <p class="summary-amount">22</p>
            <div class="summary-trend trend-up">
              <i class="fas fa-arrow-up"></i> 5 más que el mes pasado
            </div>
          </div>
        </div>
        <div class="payment-summary-card">
          <div class="summary-icon bg-warning">
            <i class="fas fa-hourglass-half"></i>
          </div>
          <div class="summary-content">
            <h4>Pagos Pendientes</h4>
            <p class="summary-amount">5</p>
            <div class="summary-trend trend-down">
              <i class="fas fa-arrow-down"></i> 2 menos que el mes pasado
            </div>
          </div>
        </div>
      </div>

      <!--estos son las opciones de gestion de pagos a modelos-->
      <div class="payment-filters">
        <div class="search-container">
          <i class="fas fa-search search-icon"></i>
          <input
            type="text"
            class="search-input"
            placeholder="Buscar modelo por nombre o campaña"
          />
        </div>
        <div class="filter-controls">
          <select class="filter-select">
            <option value="">Estado de Pago</option>
            <option value="pending">Pendiente</option>
            <option value="completed">Pagado</option>
            <option value="overdue">Atrasado</option>
          </select>
          <select class="filter-select">
            <option value="">Mes de Pago</option>
            <option value="01">Enero</option>
            <option value="02">Febrero</option>
            <option value="03">Marzo</option>
            <!-- Add other months -->
          </select>
        </div>
      </div>

      <!--esto es la tabla modelo-->
      <div class="payment-table-container">
        <table class="payment-table">
          <thead>
            <tr>
              <th>Modelo</th>
              <th>Campaña</th>
              <th>Fecha de Pago</th>
              <th>Monto</th>
              <th>Estado</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="model-profile">
                <img
                  src=""
                  alt="Modelo"
                  class="model-avatar"
                />
                <div class="model-details">
                  <span class="model-name">Laura Mendoza</span>
                  <span class="model-handle">@lauramendoza</span>
                </div>
              </td>
              <td>Campaña Verano 2025</td>
              <td>
                <div class="payment-date">
                  <span class="date">15/07/2025</span>
                  <span class="date-status upcoming">En 15 días</span>
                </div>
              </td>
              <td class="payment-amount">$1,250</td>
              <td>
                <span class="payment-status payment-status--pending">
                  <span class="payment-status__circle"></span>
                  <span class="payment-status__text">Pendiente</span>
                </span>
              </td>
              <td class="action-cell">
                <div class="action-buttons">
                  <button class="btn-action confirm" title="Marcar como pagado">
                    <i class="fas fa-check-circle"></i>
                  </button>
                  <button class="btn-action edit" title="Editar detalles">
                    <i class="fas fa-edit"></i>
                  </button>
                </div>
              </td>
            </tr>
            <tr>
              <td class="model-profile">
                <img
                  src=""
                  alt="Modelo"
                  class="model-avatar"
                />
                <div class="model-details">
                  <span class="model-name">Carlos Vega</span>
                  <span class="model-handle">@carlosvega</span>
                </div>
              </td>
              <td>Lanzamiento Colección</td>
              <td>
                <div class="payment-date">
                  <span class="date">05/07/2025</span>
                  <span class="date-status overdue">Atrasado</span>
                </div>
              </td>
              <td class="payment-amount">$950</td>
              <td>
                <span class="payment-status payment-status--overdue">
                  <span class="payment-status__circle"></span>
                  <span class="payment-status__text">Atrasado</span>
                </span>
              </td>
              <td class="action-cell">
                <div class="action-buttons">
                  <button class="btn-action confirm" title="Marcar como pagado">
                    <i class="fas fa-check-circle"></i>
                  </button>
                  <button class="btn-action edit" title="Editar detalles">
                    <i class="fas fa-edit"></i>
                  </button>
                </div>
              </td>
            </tr>
            <tr>
              <td class="model-profile">
                <img
                  src=""
                  alt="Modelo"
                  class="model-avatar"
                />
                <div class="model-details">
                  <span class="model-name">Ana Martínez</span>
                  <span class="model-handle">@anamartinez</span>
                </div>
              </td>
              <td>Evento Corporativo</td>
              <td>
                <div class="payment-date">
                  <span class="date">20/06/2025</span>
                  <span class="date-status completed">Completado</span>
                </div>
              </td>
              <td class="payment-amount">$1,750</td>
              <td>
                <span class="payment-status payment-status--completed">
                  <span class="payment-status__circle"></span>
                  <span class="payment-status__text">Pagado</span>
                </span>
              </td>
              <td class="action-cell">
                <div class="action-buttons">
                  <button
                    class="btn-action view-receipt"
                    title="Ver comprobante"
                  >
                    <i class="fas fa-receipt"></i>
                  </button>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <!--esto es la paginacion de la tabla modelos-->
      <div class="pagination-container">
        <div class="pagination-info">Mostrando 1-3 de 12 pagos</div>
        <div class="pagination-controls">
          <button class="pagination-btn" disabled>
            <i class="fas fa-chevron-left"></i>
          </button>
          <span class="pagination-current">1</span>
          <button class="pagination-btn">
            <i class="fas fa-chevron-right"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

