<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gestión de Pautas Publicitarias</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
  <link rel="stylesheet" href="pautas.css">
</head>
<body>
  <div class="dashboard">
    <!-- Contenido Principal -->
    <div class="main-content">
      <div class="header">
        <h2>Gestión de Pautas Publicitarias</h2>
      </div>

      <!-- Tarjetas de resumen -->
      <div class="cards-row">
        <div class="card">
          <div class="card-header">
            <div class="card-title">Pautas Activas</div>
            <div class="card-icon bg-primary">
              <i class="fas fa-bullhorn"></i>
            </div>
          </div>
          <div class="card-value">24</div>
          <div class="card-label">En ejecución</div>
          <div class="card-trend trend-up">
            <i class="fas fa-arrow-up"></i> +5 vs periodo anterior
          </div>
        </div>
        <div class="card">
          <div class="card-header">
            <div class="card-title">Inversión Total</div>
            <div class="card-icon bg-success">
              <i class="fas fa-dollar-sign"></i>
            </div>
          </div>
          <div class="card-value">$48,750</div>
          <div class="card-label">Presupuesto actual</div>
          <div class="card-trend trend-up">
            <i class="fas fa-arrow-up"></i> +15.3% vs periodo anterior
          </div>
        </div>
        <div class="card">
          <div class="card-header">
            <div class="card-title">Pautas Pendientes</div>
            <div class="card-icon bg-warning">
              <i class="fas fa-clock"></i>
            </div>
          </div>
          <div class="card-value">8</div>
          <div class="card-label">Por autorizar</div>
          <div class="card-trend trend-down">
            <i class="fas fa-arrow-down"></i> -3 vs periodo anterior
          </div>
        </div>
      </div>

      <!-- Gestión de Pautas -->
      <div class="card pautas-management-card">
        <div class="card-header">
          <div class="card-title-container">
            <i class="fas fa-ad card-header-icon"></i>
            <h3 class="card-title">Administración de Pautas</h3>
          </div>
          <div class="card-header-actions">
            <button class="btn-add-pauta" id="btnAddPauta">
              <i class="fas fa-plus"></i> Nueva Pauta
            </button>
          </div>
        </div>

        <!-- Filtros de pautas -->
        <div class="pautas-filters">
          <div class="search-container">
            <i class="fas fa-search search-icon"></i>
            <input type="text" class="search-input" placeholder="Buscar pauta por nombre o ubicación">
          </div>
          <div class="filter-controls">
            <select class="filter-select">
              <option value="">Estado de Pauta</option>
              <option value="active">Activa</option>
              <option value="pending">Pendiente</option>
              <option value="completed">Completada</option>
            </select>
            <select class="filter-select">
              <option value="">Modelo</option>
              <option value="all">Todos los modelos</option>
              <option value="laura">Laura Mendoza</option>
              <option value="carlos">Carlos Vega</option>
              <option value="ana">Ana Martínez</option>
            </select>
          </div>
        </div>

        <!-- Tabla de pautas -->
        <div class="pautas-table-container">
          <table class="pautas-table">
            <thead>
              <tr>
                <th>Fecha</th>
                <th>Nombre de Pauta</th>
                <th>Ubicación</th>
                <th>Modelo</th>
                <th>Autorizaciones</th>
                <th>Monto</th>
                <th>Estado</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="fecha-cell">15/05/2025</td>
                <td class="nombre-pauta-cell">Campaña Verano 2025</td>
                <td class="ubicacion-cell">Centro Comercial Plaza Mayor</td>
                <td class="modelo-cell">
                  <div class="modelo-info">
                    <img src="/placeholder.svg?height=48&width=48" alt="Laura Mendoza" class="modelo-avatar">
                    <div class="modelo-details">
                      <span class="modelo-name">Laura Mendoza</span>
                    </div>
                  </div>
                </td>
                <td class="autorizaciones-cell">
                  <div class="auth-badges">
                    <span class="auth-badge auth-badge--approved" title="Autorización Comercial">
                      <i class="fas fa-check-circle"></i> Comercial
                    </span>
                    <span class="auth-badge auth-badge--pending" title="Autorización Directiva">
                      <i class="fas fa-clock"></i> Directiva
                    </span>
                  </div>
                </td>
                <td class="monto-cell">$3,500</td>
                <td class="estado-cell">
                  <span class="pauta-status pauta-status--in-progress">
                    <span class="pauta-status__circle"></span>
                    <span class="pauta-status__text">En Proceso</span>
                  </span>
                </td>
                <td class="action-cell">
                  <div class="action-buttons">
                    <button class="btn-action edit" title="Editar pauta">
                      <i class="fas fa-edit"></i>
                    </button>
                    <button class="btn-action view" title="Ver detalles">
                      <i class="fas fa-eye"></i>
                    </button>
                    <button class="btn-action delete" title="Eliminar pauta">
                      <i class="fas fa-trash-alt"></i>
                    </button>
                  </div>
                </td>
              </tr>
              <tr>
                <td class="fecha-cell">22/05/2025</td>
                <td class="nombre-pauta-cell">Lanzamiento Producto Premium</td>
                <td class="ubicacion-cell">Hotel Grand Luxury</td>
                <td class="modelo-cell">
                  <div class="modelo-info">
                    <img src="/placeholder.svg?height=48&width=48" alt="Carlos Vega" class="modelo-avatar">
                    <div class="modelo-details">
                      <span class="modelo-name">Carlos Vega</span>
                    </div>
                  </div>
                </td>
                <td class="autorizaciones-cell">
                  <div class="auth-badges">
                    <span class="auth-badge auth-badge--approved" title="Autorización Comercial">
                      <i class="fas fa-check-circle"></i> Comercial
                    </span>
                    <span class="auth-badge auth-badge--approved" title="Autorización Directiva">
                      <i class="fas fa-check-circle"></i> Directiva
                    </span>
                  </div>
                </td>
                <td class="monto-cell">$5,200</td>
                <td class="estado-cell">
                  <span class="pauta-status pauta-status--active">
                    <span class="pauta-status__circle"></span>
                    <span class="pauta-status__text">Activa</span>
                  </span>
                </td>
                <td class="action-cell">
                  <div class="action-buttons">
                    <button class="btn-action edit" title="Editar pauta">
                      <i class="fas fa-edit"></i>
                    </button>
                    <button class="btn-action view" title="Ver detalles">
                      <i class="fas fa-eye"></i>
                    </button>
                    <button class="btn-action delete" title="Eliminar pauta">
                      <i class="fas fa-trash-alt"></i>
                    </button>
                  </div>
                </td>
              </tr>
              <tr>
                <td class="fecha-cell">10/06/2025</td>
                <td class="nombre-pauta-cell">Evento Corporativo Anual</td>
                <td class="ubicacion-cell">Centro de Convenciones</td>
                <td class="modelo-cell">
                  <div class="modelo-info">
                    <img src="/placeholder.svg?height=48&width=48" alt="Ana Martínez" class="modelo-avatar">
                    <div class="modelo-details">
                      <span class="modelo-name">Ana Martínez</span>
                    </div>
                  </div>
                </td>
                <td class="autorizaciones-cell">
                  <div class="auth-badges">
                    <span class="auth-badge auth-badge--rejected" title="Autorización Comercial">
                      <i class="fas fa-times-circle"></i> Comercial
                    </span>
                    <span class="auth-badge auth-badge--pending" title="Autorización Directiva">
                      <i class="fas fa-clock"></i> Directiva
                    </span>
                  </div>
                </td>
                <td class="monto-cell">$4,800</td>
                <td class="estado-cell">
                  <span class="pauta-status pauta-status--on-hold">
                    <span class="pauta-status__circle"></span>
                    <span class="pauta-status__text">En Espera</span>
                  </span>
                </td>
                <td class="action-cell">
                  <div class="action-buttons">
                    <button class="btn-action edit" title="Editar pauta">
                      <i class="fas fa-edit"></i>
                    </button>
                    <button class="btn-action view" title="Ver detalles">
                      <i class="fas fa-eye"></i>
                    </button>
                    <button class="btn-action delete" title="Eliminar pauta">
                      <i class="fas fa-trash-alt"></i>
                    </button>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- Paginación -->
        <div class="pagination-container">
          <div class="pagination-info">Mostrando 1-3 de 24 pautas</div>
          <div class="pagination-controls">
            <button class="pagination-btn" disabled>
              <i class="fas fa-chevron-left"></i>
            </button>
            <span class="pagination-current">1</span>
            <button class="pagination-btn">
              <i class="fas fa-chevron-right"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal para Agregar/Editar Pauta -->
  <div class="modal-overlay" id="pautaModal">
    <div class="modal-container">
      <div class="modal-header">
        <h3 class="modal-title">Nueva Pauta Publicitaria</h3>
        <button class="modal-close" id="closeModal">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <div class="modal-body">
        <form id="pautaForm">
          <div class="form-row">
            <div class="form-group">
              <label for="fechaPauta">Fecha</label>
              <input type="date" id="fechaPauta" class="form-control" required>
            </div>
            <div class="form-group">
              <label for="nombrePauta">Nombre de Pauta</label>
              <input type="text" id="nombrePauta" class="form-control" placeholder="Ej: Campaña Verano 2025" required>
            </div>
          </div>
          
          <div class="form-row">
            <div class="form-group">
              <label for="ubicacionPauta">Ubicación</label>
              <input type="text" id="ubicacionPauta" class="form-control" placeholder="Ej: Centro Comercial Plaza Mayor" required>
            </div>
            <div class="form-group">
              <label for="montoPauta">Monto de Pauta</label>
              <div class="input-with-icon">
                <i class="fas fa-dollar-sign"></i>
                <input type="number" id="montoPauta" class="form-control" placeholder="0.00" min="0" step="0.01" required>
              </div>
            </div>
          </div>
          
          <div class="form-row">
            <div class="form-group">
              <label for="autorizacionComercial">Autorización Comercial</label>
              <select id="autorizacionComercial" class="form-control" required>
                <option value="">Seleccionar estado</option>
                <option value="approved">Aprobada</option>
                <option value="pending">Pendiente</option>
                <option value="rejected">Rechazada</option>
              </select>
            </div>
            <div class="form-group">
              <label for="autorizacionDirectiva">Autorización Directiva</label>
              <select id="autorizacionDirectiva" class="form-control" required>
                <option value="">Seleccionar estado</option>
                <option value="approved">Aprobada</option>
                <option value="pending">Pendiente</option>
                <option value="rejected">Rechazada</option>
              </select>
            </div>
          </div>
          
          <div class="form-row">
            <div class="form-group">
              <label for="estadoPauta">Estado de la Pauta</label>
              <select id="estadoPauta" class="form-control" required>
                <option value="">Seleccionar estado</option>
                <option value="active">Activa</option>
                <option value="in-progress">En Proceso</option>
                <option value="on-hold">En Espera</option>
                <option value="completed">Completada</option>
                <option value="cancelled">Cancelada</option>
              </select>
            </div>
            <div class="form-group">
              <label for="modeloPauta">Modelo</label>
              <select id="modeloPauta" class="form-control" required>
                <option value="">Seleccionar modelo</option>
                <option value="laura">Laura Mendoza</option>
                <option value="carlos">Carlos Vega</option>
                <option value="ana">Ana Martínez</option>
                <option value="miguel">Miguel Sánchez</option>
                <option value="sofia">Sofía Rodríguez</option>
              </select>
            </div>
          </div>
          
          <div class="form-group">
            <label for="observacionesPauta">Observaciones</label>
            <textarea id="observacionesPauta" class="form-control" rows="3" placeholder="Detalles adicionales sobre la pauta..."></textarea>
          </div>
          
          <div class="form-actions">
            <button type="button" class="btn-cancel" id="cancelPauta">Cancelar</button>
            <button type="submit" class="btn-save">Guardar Pauta</button>
          </div>
        </form>
      </div>
    </div>
  </div>

</body>

<script src="/pautas.js" defer></script>
</html>