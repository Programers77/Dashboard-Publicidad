<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
/>
<style>
 
    .table-wrapper {
      max-width: 100%;
      overflow-x: auto;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    th, td {
      padding: 10px;
      text-align: left;
      border-bottom: 1px solid #441717;
    }

    tr.highlighted {
      background-color: rgba(247, 37, 133, 0.05);
    }

    tr:hover {
      cursor: pointer;
    }
</style>

<div class="container">
  <header>
    <div class="header-title">
      <h1>Listado de Modelos</h1>
      <p>Catálogo de modelos para diferentes tipos de pautas</p>
    </div>
    <div class="header-actions">
      <button
        class="btn btn-primary"
        data-bs-toggle="modal"
        data-bs-target="#agregarModeloModal">Agregar Modelo</button
      >
      <!-- <button class="btn btn-secondary">Editar Modelo</button> -->
    </div>
  </header>

  <div class="summary-cards">
    <div class="card">
      <div class="card-icon">
        <i class="fas fa-user-friends"></i>
      </div>
      <div class="card-title">Total de Modelos</div>
      <div class="card-value">8</div>
      <div class="card-trend">
        <i class="fas fa-arrow-up"></i> Rango de tallas variado
      </div>
    </div>
    <div class="card">
      <div class="card-icon">
        <i class="fas fa-tshirt"></i>
      </div>
      <div class="card-title">Tallas más Comunes</div>
      <div class="card-value">S - M</div>
      <div class="card-trend">
        <i class="fas fa-info-circle"></i> Camisa y Pantalón
      </div>
    </div>
    <div class="card">
      <div class="card-icon">
        <i class="fas fa-shoe-prints"></i>
      </div>
      <div class="card-title">Rango de Zapatos</div>
      <div class="card-value">36 - 43</div>
      <div class="card-trend">
        <i class="fas fa-chart-pie"></i> Diversidad de calzado
      </div>
    </div>
    <div class="card">
      <div class="card-icon">
        <i class="fas fa-star"></i>
      </div>
      <div class="card-title">Pauta mas Común</div>
      <div class="card-value">Gala y Formal</div>
      <div class="card-trend">
        <i class="fas fa-glass-cheers"></i> Estilo elegante
      </div>
    </div>
  </div>

  <div id="tabla-loader" style="text-align: center; padding: 20px;">
    <i class="fas fa-spinner fa-spin" style="font-size: 24px;"></i> Cargando datos...
  </div>

  <div class="table-wrapper">
    <table class="table">
      <thead>
        <tr id="data-model-id">
          <th>N°</th>
          <th>Nombre y Apellido</th>
          <th>Camisa / Franela</th>
          <th>Pantalón</th>
          <th>Vestidos - Traje</th>
          <th>Zapatos</th>
          <th>N° Outfits</th>
        </tr>
      </thead>
      <tbody id="tablaModelos">
        <!-- JS agregará filas aquí -->
      </tbody>
    </table>
  </div>

  <!-- Modal para agregar modelo -->
  <div
    class="modal fade"
    id="agregarModeloModal"
    tabindex="-1"
    aria-labelledby="agregarModeloModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-dialog-centered">
      <div
        class="modal-content"
        style="border-radius: 0.5rem; overflow: hidden; border: none; box-shadow: 0 5px 20px rgba(0,0,0,0.15)"
      >
        <!-- Encabezado con estilo mejorado -->
        <div
          class="modal-header"
          style="background-color: #4361ee; color: white; padding: 1.2rem 1.5rem; border-bottom: none"
        >
          <h5 class="modal-title" style="font-weight: 600; font-size: 1.25rem">
            <i class="fas fa-user-plus me-2"></i>Agregar Nuevo Modelo
          </h5>
          <button
            type="button"
            class="btn-close btn-close-white"
            data-bs-dismiss="modal"
            aria-label="Close"></button>
        </div>

        <!-- Cuerpo del modal con mejor espaciado -->
        <div class="modal-body" style="padding: 1.5rem">
          <form id="formAgregarModelo">
            <!-- Grupo de campos con mejor espaciado -->
            <div class="mb-4">
              <label
                for="nombreApellido"
                class="form-label"
                style="font-weight: 500; color: #333; margin-bottom: 0.5rem"
                >Nombre y Apellido</label
              >
              <input
                type="text"
                class="form-control"
                id="nombreApellido"
                required
                style="padding: 0.6rem 1rem; border-radius: 0.375rem; border: 1px solid #ced4da; transition: all 0.3s"
              />
            </div>

            <!-- Sección de medidas en grid -->
            <div class="row g-3 mb-3">
              <div class="col-md-6">
                <label
                  for="camisaFranela"
                  class="form-label"
                  style="font-weight: 500; color: #333">Camisa/Franela</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="camisaFranela"
                  placeholder="Ej: S 30-32"
                  style="padding: 0.6rem 1rem; border-radius: 0.375rem; border: 1px solid #ced4da"
                />
              </div>

              <div class="col-md-6">
                <label
                  for="pantalon"
                  class="form-label"
                  style="font-weight: 500; color: #333">Pantalón</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="pantalon"
                  placeholder="Ej: S 39"
                  style="padding: 0.6rem 1rem; border-radius: 0.375rem; border: 1px solid #ced4da"
                />
              </div>

              <div class="col-md-6">
                <label
                  for="vestidoTraje"
                  class="form-label"
                  style="font-weight: 500; color: #333">Vestidos/Traje</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="vestidoTraje"
                  placeholder="Ej: -"
                  style="padding: 0.6rem 1rem; border-radius: 0.375rem; border: 1px solid #ced4da"
                />
              </div>

              <div class="col-md-6">
                <label
                  for="zapatos"
                  class="form-label"
                  style="font-weight: 500; color: #333">Zapatos</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="zapatos"
                  placeholder="Ej: 39"
                  style="padding: 0.6rem 1rem; border-radius: 0.375rem; border: 1px solid #ced4da"
                />
              </div>
            </div>

            <!-- Campo de outfits -->
            <div class="mb-3">
              <label
                for="numOutfits"
                class="form-label"
                style="font-weight: 500; color: #333">N° Outfits</label
              >
              <input
                type="number"
                class="form-control"
                id="numOutfits"
                value="1"
                style="width: 100px; padding: 0.6rem 1rem; border-radius: 0.375rem; border: 1px solid #ced4da"
              />
            </div>
          </form>
        </div>

        <!-- Pie del modal mejorado -->
        <div
          class="modal-footer"
          style="border-top: 1px solid #e9ecef; padding: 1rem 1.5rem; background-color: #f8f9fa"
        >
          <button
            type="button"
            class="btn btn-outline-secondary"
            data-bs-dismiss="modal"
            style="padding: 0.5rem 1.25rem; border-radius: 0.375rem; border: 1px solid #ced4da"
          >
            Cancelar
          </button>
          <button
            type="button"
            class="btn btn-primary"
            id="guardarModelo"
            style="padding: 0.5rem 1.25rem; border-radius: 0.375rem; background-color: #4361ee; border: none"
          >
            Guardar Modelo
          </button>
        </div>
      </div>
    </div>
  </div>

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7"
    crossorigin="anonymous"
  />

  <script src="/modelo.js" defer></script>
  <script src="/modelo-apis.js" defer></script>
</div>
