    .allocation-item:hover {
        background-color: var(--light);
    }
    
    .allocation-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
    }
    
    .allocation-details {
