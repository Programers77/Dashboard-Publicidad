                    <div class="budget-progress">
                        <div class="progress-bar ads"></div>
                    </div>
                    <div class="budget-meta">
                        <span>80% utilizado</span>
                        <span>$2,000 restantes</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
