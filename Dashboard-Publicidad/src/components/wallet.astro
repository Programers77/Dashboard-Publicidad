<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
   
</head>

    <div class="wallet-container">
        <!-- Header -->
        <div class="wallet-header">
            <h1 class="wallet-title">
                <i class="fas fa-wallet"></i>
                Billetera Digital
            </h1>
            <div class="wallet-actions">
                <!-- <button class="btn btn-outline">
                    <i class="fas fa-file-export"></i> Exportar
                </button> -->
               
            </div>
        </div>
        
        <!-- Balance Card - Modificado con clases para ingresos/gastos -->
        <div class="balance-card">
            <h3 class="balance-title">Balance Disponible</h3>
            <div class="balance-amount">$24,850.00</div>
            <div class="balance-details">
                <div class="balance-detail income">
                    <i class="fas fa-arrow-up"></i>
                    <span>Ingresos: $32,450</span>
                </div>
                <div class="balance-detail expense">
                    <i class="fas fa-arrow-down"></i>
                    <span>Gastos: $7,600</span>
                </div>
            </div>
        </div>

        <!-- Transactions Section -->
        <div class="transactions-section">
            <div class="section-header">
                <h2 class="section-title">Últimas Transacciones</h2>
                <div class="filter-tabs">
                    <div class="tab active">Todas</div>
                    <div class="tab">Ingresos</div>
                    <div class="tab">Gastos</div>
                </div>
            </div>
            
            <div class="transaction-list">
                <!-- Transaction 1 -->
                <div class="transaction-card">
                    <div class="transaction-icon income">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <div class="transaction-details">
                        <div class="transaction-title">Pago Campaña Verano</div>
                        <div class="transaction-meta">
                            <span>Cliente: Coca-Cola</span>
                            <span>15 Jul 2025</span>
                        </div>
                    </div>
                    <div class="transaction-amount income">+$5,200.00</div>
                </div>
                
                <!-- Transaction 2 -->
                <div class="transaction-card">
                    <div class="transaction-icon expense">
                        <i class="fas fa-user-tie"></i>
                    </div>
                    <div class="transaction-details">
                        <div class="transaction-title">Pago a Modelos</div>
                        <div class="transaction-meta">
                            <span>3 modelos</span>
                            <span>14 Jul 2025</span>
                        </div>
                    </div>
                    <div class="transaction-amount expense">-$2,850.00</div>
                </div>
                
                <!-- Transaction 3 -->
                <div class="transaction-card">
                    <div class="transaction-icon expense">
                        <i class="fas fa-ad"></i>
                    </div>
                    <div class="transaction-details">
                        <div class="transaction-title">Facebook Ads</div>
                        <div class="transaction-meta">
                            <span>Campaña: Promo Verano</span>
                            <span>13 Jul 2025</span>
                        </div>
                    </div>
                    <div class="transaction-amount expense">-$1,200.00</div>
                </div>
                
                <!-- Transaction 4 -->
                <div class="transaction-card">
                    <div class="transaction-icon income">
                        <i class="fas fa-file-invoice-dollar"></i>
                    </div>
                    <div class="transaction-details">
                        <div class="transaction-title">Reembolso Impuestos</div>
                        <div class="transaction-meta">
                            <span>Gobierno</span>
                            <span>10 Jul 2025</span>
                        </div>
                    </div>
                    <div class="transaction-amount income">+$850.50</div>
                </div>
                
                <!-- Transaction 5 -->
                <div class="transaction-card">
                    <div class="transaction-icon transfer">
                        <i class="fas fa-exchange-alt"></i>
                    </div>
                    <div class="transaction-details">
                        <div class="transaction-title">Transferencia entre cuentas</div>
                        <div class="transaction-meta">
                            <span>De Ahorros a Corriente</span>
                            <span>8 Jul 2025</span>
                        </div>
                    </div>
                    <div class="transaction-amount">$3,000.00</div>
                </div>
            </div>
        </div>
        
        <!-- Budgets Section -->
        <div class="budgets-section">
            <div class="section-header">
                <h2 class="section-title">Presupuestos</h2>
            </div>
            
            <div class="budget-cards">
                <!-- Budget 1 -->
                <div class="budget-card">
                    <div class="budget-header">
                        <div class="budget-title">Campañas Publicitarias</div>
                        <i class="fas fa-bullhorn" style="color: var(--primary);"></i>
                    </div>
                    <div class="budget-amount">$15,000 / $20,000</div>
                    <div class="budget-progress">
                        <div class="progress-bar campaigns"></div>
                    </div>
                    <div class="budget-meta">
                        <span>75% utilizado</span>
                        <span>$5,000 restantes</span>
                    </div>
                </div>
                
                <!-- Budget 2 -->
                <div class="budget-card">
                    <div class="budget-header">
                        <div class="budget-title">Pagos a Modelos</div>
                        <i class="fas fa-user-tie" style="color: var(--success);"></i>
                    </div>
                    <div class="budget-amount">$9,000 / $20,000</div>
                    <div class="budget-progress">
                        <div class="progress-bar models"></div>
                    </div>
                    <div class="budget-meta">
                        <span>45% utilizado</span>
                        <span>$11,000 restantes</span>
                    </div>
                </div>
                
                <!-- Budget 3 -->
                <div class="budget-card">
                    <div class="budget-header">
                        <div class="budget-title">Anuncios Digitales</div>
                        <i class="fas fa-ad" style="color: var(--warning);"></i>
                    </div>
                    <div class="budget-amount">$8,000 / $10,000</div>
                    <div class="budget-progress">
                        <div class="progress-bar ads"></div>
                    </div>
                    <div class="budget-meta">
                        <span>80% utilizado</span>
                        <span>$2,000 restantes</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
