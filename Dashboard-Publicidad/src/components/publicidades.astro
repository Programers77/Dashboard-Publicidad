<!-- Modal para nueva publicidad -->
<div class="modal fade" id="adModal" tabindex="-1" aria-labelledby="adModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="adModalLabel"><i class="fas fa-plus-circle"></i> Nueva Campaña Publicitaria</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <!-- Paso 1: Nombre de la publicidad -->
          <div id="step1">
            <div class="mb-4 text-center">
              <i class="fas fa-ad fa-3x mb-3" style="color: var(--primary-color);"></i>
              <h4>Crear Nueva Campaña</h4>
              <p class="text-muted">Comience ingresando los detalles básicos de su nueva campaña publicitaria</p>
            </div>
            
            <div class="mb-3">
              <label for="adName" class="form-label">Nombre de la Campaña</label>
              <input type="text" class="form-control" id="adName" placeholder="Ej. Campaña Verano 2023 - Redes Sociales">
            </div>
            
            <div class="mb-3">
              <label for="campaignType" class="form-label">Tipo de Campaña</label>
              <select class="form-control" id="campaignType">
                <option value="">Seleccione un tipo</option>
                <option value="branding">Branding</option>
                <option value="performance">Performance</option>
                <option value="promocional">Promocional</option>
                <option value="lanzamiento">Lanzamiento de Producto</option>
              </select>
            </div>
          </div>
          
          <!-- Paso 2: Detalles completos -->
          <div id="step2" style="display: none;">
            <div class="wizard-progress mb-4">
              <div class="progress-step completed">1</div>
              <div class="progress-bar"></div>
              <div class="progress-step active">2</div>
            </div>
            
            <form id="adForm">
              <div class="row">
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="installationDate" class="form-label">Fecha de Inicio</label>
                    <input type="date" class="form-control" id="installationDate">
                  </div>
                  <div class="mb-3">
                    <label for="paymentDate" class="form-label">Fecha de Pago</label>
                    <input type="date" class="form-control" id="paymentDate">
                  </div>
                  <div class="mb-3">
                    <label for="uninstallationDate" class="form-label">Fecha de Finalización</label>
                    <input type="date" class="form-control" id="uninstallationDate">
                  </div>
                  <div class="mb-3">
                    <label for="location" class="form-label">Ubicación/Medio</label>
                    <input type="text" class="form-control" id="location" placeholder="Ej. Facebook/Instagram o Dirección física">
                  </div>
                </div>
                
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="mediaType" class="form-label">Tipo de Medio</label>
                    <select class="form-control" id="mediaType">
                      <option value="">Seleccione un medio</option>
                      <option value="redes">Redes Sociales</option>
                      <option value="tv">Televisión</option>
                      <option value="radio">Radio</option>
                      <option value="vallas">Vallas Publicitarias</option>
                      <option value="prensa">Prensa</option>
                      <option value="digital">Medios Digitales</option>
                    </select>
                  </div>
                  <div class="mb-3">
                    <label for="budget" class="form-label">Presupuesto Total</label>
                    <div class="input-group">
                      <span class="input-group-text">$</span>
                      <input type="number" class="form-control" id="budget" step="0.01" placeholder="0.00">
                    </div>
                  </div>
                  <div class="mb-3">
                    <label for="objective" class="form-label">Objetivo Principal</label>
                    <select class="form-control" id="objective">
                      <option value="">Seleccione un objetivo</option>
                      <option value="awareness">Awareness</option>
                      <option value="consideration">Consideración</option>
                      <option value="conversion">Conversión</option>
                      <option value="traffic">Tráfico</option>
                      <option value="engagement">Engagement</option>
                    </select>
                  </div>
                </div>
              </div>
              
              <div class="mb-3">
                <label for="campaignDescription" class="form-label">Descripción de la Campaña</label>
                <textarea class="form-control" id="campaignDescription" rows="3" placeholder="Describa los detalles y objetivos específicos de esta campaña"></textarea>
              </div>
              
              <div class="row">
                <div class="col-md-6">
                  <div class="mb-3">
                    <label class="form-label">Archivos Adjuntos</label>
                    <div class="file-upload">
                      <label for="fileUpload" class="file-upload-label">
                        <i class="fas fa-cloud-upload-alt"></i>
                        <span>Arrastre archivos aquí o haga clic para seleccionar</span>
                        <input type="file" id="fileUpload" style="display: none;">
                      </label>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="campaignManager" class="form-label">Responsable</label>
                    <select class="form-control" id="campaignManager">
                      <option value="">Asignar responsable</option>
                      <option value="1">María González</option>
                      <option value="2">Carlos Mendoza</option>
                      <option value="3">Ana Rodríguez</option>
                    </select>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" id="backButton" style="display: none;">
            <i class="fas fa-arrow-left"></i> Atrás
          </button>
          <button type="button" class="btn btn-primary" id="nextButton">
            Siguiente <i class="fas fa-arrow-right"></i>
          </button>
          <button type="button" class="btn btn-success" id="submitButton" style="display: none;">
            <i class="fas fa-save"></i> Guardar Campaña
          </button>
        </div>
      </div>
    </div>
  </div>

