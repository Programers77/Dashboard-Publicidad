<!-- Modal para nueva publicidad -->
<div class="modal fade" id="adModal" tabindex="-1" aria-labelledby="adModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="adModalLabel">Nueva Publicidad</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <!-- Paso 1: Nombre de la publicidad -->
          <div id="step1">
            <div class="mb-3">
              <label for="adName" class="form-label">Nombre de la Publicidad</label>
              <input type="text" class="form-control" id="adName" placeholder="Ej. Valla Principal - Av. Bolívar">
            </div>
          </div>
          
          <!-- Paso 2: Detalles completos -->
          <div id="step2" style="display: none;">
            <form id="adForm">
              <div class="row">
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="installationDate" class="form-label">Fecha de Instalación</label>
                    <input type="date" class="form-control" id="installationDate">
                  </div>
                  <div class="mb-3">
                    <label for="paymentDate" class="form-label">Fecha de Pago</label>
                    <input type="date" class="form-control" id="paymentDate">
                  </div>
                  <div class="mb-3">
                    <label for="uninstallationDate" class="form-label">Fecha de Desinstalación</label>
                    <input type="date" class="form-control" id="uninstallationDate">
                  </div>
                  <div class="mb-3">
                    <label for="location" class="form-label">Ubicación</label>
                    <input type="text" class="form-control" id="location" placeholder="Dirección exacta">
                  </div>
                  <div class="mb-3">
                    <label for="production" class="form-label">Producción</label>
                    <input type="text" class="form-control" id="production" placeholder="Detalles de producción">
                  </div>
                </div>
                
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="lease" class="form-label">Arrendamiento</label>
                    <input type="number" class="form-control" id="lease" step="0.01" placeholder="0.00">
                  </div>
                  <div class="mb-3">
                    <label for="installationPrice" class="form-label">Precio de Instalación</label>
                    <input type="number" class="form-control" id="installationPrice" step="0.01" placeholder="0.00">
                  </div>
                  <div class="mb-3">
                    <label for="quantity" class="form-label">Cantidad</label>
                    <input type="number" class="form-control" id="quantity" placeholder="1">
                  </div>
                  <div class="mb-3">
                    <label for="uninstallationPrice" class="form-label">Precio de Desinstalación</label>
                    <input type="number" class="form-control" id="uninstallationPrice" step="0.01" placeholder="0.00">
                  </div>
                </div>
              </div>
              
              <div class="row">
                <div class="col-md-4">
                  <div class="mb-3">
                    <label for="municipalTax" class="form-label">Impuesto Municipal</label>
                    <input type="number" class="form-control" id="municipalTax" step="0.01" placeholder="0.00">
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="mb-3">
                    <label for="corpoelecTax" class="form-label">Impuesto de CORPOELEC</label>
                    <input type="number" class="form-control" id="corpoelecTax" step="0.01" placeholder="0.00">
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="mb-3">
                    <label for="inttTax" class="form-label">Impuesto del INTT</label>
                    <input type="number" class="form-control" id="inttTax" step="0.01" placeholder="0.00">
                  </div>
                </div>
              </div>
              
              <div class="row">
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="monthlyTax" class="form-label">Impuesto Mensual</label>
                    <input type="number" class="form-control" id="monthlyTax" step="0.01" placeholder="0.00">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="total" class="form-label">Total</label>
                    <input type="number" class="form-control" id="total" step="0.01" placeholder="0.00" readonly>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" id="backButton" style="display: none;">Atrás</button>
          <button type="button" class="btn btn-primary" id="nextButton">Siguiente</button>
          <button type="button" class="btn btn-success" id="submitButton" style="display: none;">Guardar Publicidad</button>
        </div>
      </div>
    </div>
  </div>

